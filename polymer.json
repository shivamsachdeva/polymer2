{
  "entrypoint": "index.html",
  "shell": "src/basic-template.html",
  "fragments": [
    "src/bt-home.html",
    "src/bt-details.html",
    "src/bt-author.html",
    "src/bt-contact-us.html",
    "src/bt-page-not-found.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled"
    },
    {
      "preset": "es6-unbundled"
    }
  ]
}
